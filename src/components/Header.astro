---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

let customWidth = "";
switch (Astro.url.pathname) {
  case "/":
    customWidth = "720";
    break;
  case "/blog":
    customWidth = "960";
    break;
  default:
    customWidth = "960";
    break;
}
customWidth += "px";
---

<header>
  <nav>
    <a transition:name="site title" href="/">
      <h2
        class="rounded-md font-bold hover:rotate-6 transition-all bg-gradient-to-r
      from-purple-500
      via-pink-500
      to-blue-500
      p-6
      text-white
      hover:bg-gradient-to-l
      hover:from-teal-400
      hover:via-cyan-500
      hover:to-blue-600"
      >
        {SITE_TITLE}
      </h2>
    </a>
    <div transition:name="internal links" class="internal-links">
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>
<style define:vars={{ customWidth }}>
  header {
    margin: 0 auto;
    padding: 0 1em;
    max-width: calc(100%-2em);
    /* background: white; */
    /* box-shadow: 0 2px 8px rgba(var(--black), 5%); */
    max-width: var(--customWidth);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
</style>
